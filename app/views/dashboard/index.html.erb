<div class="container">
  <div class="col-md-12">
  	<h1> Viking Store Dashboard </h1>
  </div>
  <div class="row">
  	<div class="col-md-6 panel">
  		<h3> Overall </h3>
  		<%counter=0%>
  		<% @past_time.each do |days|%>
  		<br>
  		<p>Past <%=days%> Days</p>

		  <table class="table table-striped table-bordered">
		    <thead>
		      <tr>
		        <th>Item</th>
		        <th>Data</th>
		 
		      </tr>
		    </thead>
		    <tbody>
		      <tr>
		        <td>New users</td>
		        <td><%=@timespan_users[counter].count%></td>
		      </tr>
		      <tr>
		        <td>New Orders</td>
		        <td><%=@timespan_orders[counter].count%></td>
		      </tr>
		      <tr>
		        <td>New Products</td>
		        <td><%=@timespan_products[counter]%></td>
		      </tr>
		    </tbody>
		  </table>
		  	<%counter+=1%>

		  		<% end %>

  	</div>
  	<div class="col-md-6 panel">
  		<h3> Demographics and Behavior </h3>
  		<br>
  		<p>Top 3 States Users Live in</p>
  		<table class="table table-striped table-bordered">
		    <thead>
		      <tr>
		        <th>Item</th>
		        <th>Data</th>
		 
		      </tr>
		    </thead>
		    <tbody>
		      <tr>
		        <td><%=@top_three_states[0].name%></td>
		        <td><%=@top_three_states[0].count%></td>
		      </tr>
		      <tr>
		        <td><%=@top_three_states[1].name%></td>
		        <td><%=@top_three_states[1].count%></td>
		      </tr>
		      <tr>
		        <td><%=@top_three_states[2].name%></td>
		        <td><%=@top_three_states[2].count%></td>
		      </tr>
		    </tbody>
		  </table>

		  <br>
		  <p>Top 3 Cities Users Live in</p>
  		<table class="table table-striped table-bordered">
		    <thead>
		      <tr>
		        <th>Item</th>
		        <th>Data</th>
		 
		      </tr>
		    </thead>
		    <tbody>
		      <tr>
		        <td><%=@top_three_cities[0].name%></td>
		        <td><%=@top_three_cities[0].count%></td>
		      </tr>
		      <tr>
		        <td><%=@top_three_cities[1].name%></td>
		        <td><%=@top_three_cities[1].count%></td>
		      </tr>
		      <tr>
		        <td><%=@top_three_cities[2].name%></td>
		        <td><%=@top_three_cities[2].count%></td>
		      </tr>
		    </tbody>
		  </table>

		   <br>
		  <p>Top User With...</p>
		  <table class="table table-striped table-bordered">
		    <thead>
		      <tr>
		        <th>Item</th>
		        <th>User</th>
		        <th>Quantity</th>

		 
		      </tr>
		    </thead>
		    <tbody>
		      <tr>
		        <td>Highest Single Order Value</td>
		        <td><%=@highest_single_order[0].first_name%> <%=@highest_single_order[0].last_name%></td>
		        <td>$<%=@highest_single_order[0].price*@highest_single_order[0].quantity%></td>
		      </tr>
		      <tr>
		        <td></td>
		        <td></td>
		      </tr>
		      <tr>
		        <td>Most Orders Placed</td>
		        <td></td>
		      </tr>
		    </tbody>
		  </table>


  	</div>




