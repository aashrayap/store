		  <tr>
		    <td><%=category.id%></td>
		    <td><%=category.name%></td>
		    <td><%=category.description%></td>
		    <td><%=link_to"Show",category_path(category)%></td>
		    <td><%=link_to"Edit",edit_category_path(category)%></td>
		    <td><%=link_to "Delete", category_path(category), method: :delete %></td>
		  </tr>

		  <%end%>
		  
		</table>


		</div>



